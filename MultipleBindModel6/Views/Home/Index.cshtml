@model MultipleBindModel6.Models.ViewSchoolModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the <b style="background-color:forestgreen;">Index</b> Page</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<partial name="_StaffDetails" />


<partial name="_StaffDetails" />


<div class="container">
    @if (Model.MyStudent.Any())
    {
        <h2>STUDENT DATA:</h2>
        <table class="table table-bordered table-dark table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Standard</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MyStudent)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Gender</td>
                        <td>@item.Standard</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
         <h2>Student data Not Found</h2>

    }
    <br />

    @if (Model.MyTeachers.Any())
    {
        <h2>TEACHER DATA:</h2>

        <table class="table table-bordered table-dark table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Age</th>
                    <th>Standard</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MyTeachers)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Qualification</td>
                        <td>@item.Phone</td>
                        <td>@item.Salary</td>
                    </tr>
                }
            </tbody>
     </table>
    }
    else
    {
        <h2>Teacher data Not Found</h2>
    }
</div>

