
@{
    ViewBag.Title = "Registration";
    Layout = null;
}




<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Style/Newstyle.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>Hello, world!</title>

</head>
<body>
    <center>
        <form id="form">
            <h2>Registration</h2>
            <h5 id="ERRSH" style="color: green; display:none;">Data has been Insert Sucsessfully.!!!</h5>
            <h5 id="ERRSH2" style="color: RED; display:none;"> Data Insertion failed..!!</h5>
            <div class="form-col">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="fname" placeholder="First name">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="lname" placeholder="Last name">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" id="salary" placeholder="Salary">
                </div>
                <div class="form-group col-md-6">
                    <button type="button" id="btnregis" class="btn btn-primary btn-lg btn-block">Click And Register</button>
                </div>
                <div class="form-group col-md-6">
                    <button type="button" id="backhome" class="btn btn-danger btn-lg btn-block">Redirect Home</button>
                </div>
            </div>

        </form>
    </center>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
   
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {

        $('#btnregis').click(function () {
            debugger
            var formData = {              
                FirstName: $("#fname").val(),
                LastName: $("#lname").val(),
                salary: $("#salary").val(),
            };

            $.ajax({
                url: "/AutoMotiveWork/RegistrationSaveData/",
                method: "Post",
                data: formData,
                type: "json",
                success: function (test)
                {
                    if (test != 0) {
                        debugger
                        $("#ERRSH").show().delay(4000).fadeOut();                                      
                        $("#form").trigger('reset');
                    }
                    else
                    {
                        $("#ERRSH2").show().delay(4000).fadeOut();
                        $("#form").trigger('reset');
                    }
                    
                }
            });
        });
        $("#backhome").click(function () {
            $(location).prop('href', 'https://localhost:44377/AutoMotiveWork/index')
        });
       
       
    });
</script>
</body>
</html>
